@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="selling-products" class="product-store bg-light-grey padding-large">
    <div class="container">

        <div class="section-header text-center">
            <h2 class="section-title">Best Selling Products</h2>
        </div>

        <div class="row justify-content-center mb-5">
            <div class="col-md-4 text-center">
                <div style="border: 2px solid red; padding: 15px; font-weight: bold; font-size: 20px; color: red; background: #fff;">
                    HỌ VÀ TÊN - MÃ SV
                </div>
            </div>
        </div>

        <ul class="tabs list-unstyled text-center mt-4">
            <li class="active tab category-link" data-id="all" style="cursor:pointer; display:inline-block; margin: 0 10px; font-weight:bold;">All</li>

            <li class="tab category-link" data-id="1" style="cursor:pointer; display:inline-block; margin: 0 10px;">Shoes</li>
            <li class="tab category-link" data-id="2" style="cursor:pointer; display:inline-block; margin: 0 10px;">Tshirts</li>
            <li class="tab category-link" data-id="3" style="cursor:pointer; display:inline-block; margin: 0 10px;">Pants</li>
        </ul>

        <div class="tab-content">
            <div id="product-container" class="row d-flex flex-wrap">

                <div class="product-item col-lg-3 col-md-6 col-sm-6">
                    <div class="image-holder">
                        <img src="~/images/selling-products1.jpg" alt="Product" class="product-image" style="width:100%;">
                    </div>
                    <div class="product-detail text-center">
                        <h3 class="product-title">
                            <a href="#">Tên Sản Phẩm Demo</a>
                        </h3>
                        <div class="item-price text-primary" style="font-weight:bold; font-size:1.2em;">$40.00</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script>
        $(document).ready(function () {
            // Bắt sự kiện click vào menu phân loại
            $(".category-link").click(function () {
                // 1. Xử lý giao diện active
                $(".category-link").removeClass("active").css("color", "");
                $(this).addClass("active").css("color", "#c1c1c1"); // Màu active tạm

                // 2. Lấy ID phân loại
                var id = $(this).data("id");

                // 3. Gọi AJAX (Sẽ viết code gọi controller ở đây)
                console.log("Đã chọn danh mục ID: " + id);

                // Ví dụ code AJAX sơ khai:
